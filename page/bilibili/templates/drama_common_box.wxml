<template name="drama_common_temp">
    <view class="common_live_content ">
            <ul class="clearfix" >
                <li wx:for="{{items}}" class='{{(index%2==0)? "left":"right" }}'>
                    <navigator url="{{item.url}}">
                        <image src="{{item.imgpath}}"></image>
                        <span class="title_info">{{item.title}}</span>
                        <view class="drama_info">
                            <span class="left">{{item.userName}}</span>
                            <span class="right">{{item.audience}}</span>
                        </view>
                    </navigator>
                </li>
            </ul>
        </view>
</template>

